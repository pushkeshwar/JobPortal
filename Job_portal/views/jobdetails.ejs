<%if(errorMessage){ %>
    <script>
        $(document).ready(function(){
            $("#exampleModal").modal('show');
        });
    </script>
<%}%>
<div class="container">
    <%if(errorMessage){ %>
    <%} else {%>
    <h2 class="mt-4" style="display: inline-block; font-weight: 500; text-transform: capitalize;"><%=job.position %> jobs in <%=job.location %></h2>
    <div class="card job mt-3" style="width:100%">
        <div class="card-body job-card">
          <h4 class="card-title"><%=job.name %></h4>
          <h6 class="card-subtitle mb-2 text-muted"><%=job.position %></h6>
          <p><i class="fa-solid fa-location-dot mr-2"></i><%=job.location %></p>
          <p><i class="fa-solid fa-dollar-sign mr-2"></i><%=job.pack %></p>
          <p><i class="fa-solid fa-hourglass-start mr-2"></i>deadline: <%=job.deadline %></p>
          <p><i class="fa-solid fa-user mr-1"></i>Opening: <%=job.opening %></p>
          <p><i class="fa-solid fa-person mr-2"></i>Applicants: <%=job.applicants %></p>
          <div class="d-flex flex-wrap mt-5">
            <% job.skills.forEach(skill=> { %>
          <div class="skillreq"><%= skill %></div>
          <% }) %>
          <!-- <div class="skillreq">HTML</div>
          <div class="skillreq">Javascript</div>
          <div class="skillreq">Angular</div>
          <div class="skillreq">DBMS</div>
          <div class="skillreq">React</div> -->
          </div>
          <!-- <a href="/candidate-register" class="btn btn-lg  btn-secondary mt-2">Apply Now</a> -->
          <% if(locals.CandidateEmail) {%>
            <% if(applied==true) {%>
            <div  class="btn mt-4 job-detail-button">
                Applied
            </div>
            <p style="color: red; margin-top: 2px !important; margin-bottom: 2px !important;"> Thank you for applying. Email Notification has sent to your Email.</p>
              <% }else {%>
                <button type="button"class="btn mt-4 job-detail-button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Apply now
                  </button>
                  <% } %>
          <% }else {%>
            <a href="/candidate-register" style="width: 10rem; height: 2.5rem; color:white" type="button" class="btn  mt-4">
                Login to Apply
            </a>
          <% } %> 
          <p> Posted on: <%=job.posted %></p>
        </div>
    </div>
    
    <%}%>
    <!-- after login model -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header" style="background-color:#68B2A0;">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Apply Easily</h1>
              <a  href="/jobs>"  type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></a>
            </div>
            <div class="modal-body" style="background-color: #e0ecde; box-shadow: none !important">
                <%if(errorMessage){ %>
                    <div class="alert alert-dark" role="alert">
                        <%= errorMessage %>
                    </div>
                  <%}%>
                <div class="contact-form">
                    <form method="post"  enctype="multipart/form-data">
                       <!-- <div class="row"> -->
                            <div class="col">
                                <div class="form-group">
                                    <input type="text" name="Name" class="form-control" placeholder="Your Name *" value="" />
                                </div>
                                <div class="form-group">
                                    <input type="text" name="Email" class="form-control" placeholder="Your Email *" value="" />
                                </div>
                                <div class="form-group">
                                    <input type="text" name="Phone" class="form-control" placeholder="Your Phone Number *" value="" />
                                </div>
                                <div class="form-group">
                                    <label> Resume (only PDF) </label>
                                    <input type="file" name="resume" id="resume" class="form-control" accept=".pdf" value="" />
                                </div>
                                <div class="form-group">
                                    <div class="form-group"><button class="btn btn-primary btn-block" style="background: #2c6975;" type="submit">Apply</a></div>
                                </div>
                            </div>
                        <!-- </div> -->
                    </form>
                </div>
            </div>
            <!-- <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div> -->
          </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>    
</div>